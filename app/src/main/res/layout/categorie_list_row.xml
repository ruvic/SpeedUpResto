<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="192dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/nom_categorie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Offres et Bons Plans"
                android:textSize="@dimen/slide_title_mini"
                android:textColor="@color/colorPrimaryText"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:layout_margin="8dp"
                android:layout_weight="50"/>

            <TextView
                android:id="@+id/voir_plus"
                android:layout_width="128dp"
                android:layout_height="wrap_content"
                android:text="Voir +"
                android:clickable="true"
                android:textSize="@dimen/slide_title_mini"
                android:padding="2dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:background="@drawable/rounded_button_plein"
                android:layout_margin="8dp"
                android:layout_weight="50"/>

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerV_categorieItems"
            android:layout_width="match_parent"
            android:paddingLeft="0dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>