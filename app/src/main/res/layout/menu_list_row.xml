<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cat_menu_card"
    android:clickable="true"
    android:layout_width="240dp"
    android:layout_height="150dp"
    android:layout_marginRight="8dp"
    android:layout_marginLeft="5dp"
    app:cardBackgroundColor="@color/white">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="0dp"
        android:layout_marginBottom="0dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/image_menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:scaleType="centerCrop"
            android:padding="0dp"
            android:src="@drawable/ic_image_empty"
            android:foreground="#20000000"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:layout_gravity="top"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/prix_cat"
                android:layout_width="70dp"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:background="@color/bleuFonce"
                android:gravity="center"
                android:text="2500 FCFA"
                android:textColor="@color/white"
                android:textSize="@dimen/slide_title_middle"
                android:textStyle="bold" />

        </RelativeLayout>


        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="#50000000"
            android:layout_marginBottom="0dp"
            android:paddingBottom="0dp"
            android:layout_gravity="bottom">

            <TextView
                android:id="@+id/menu_cat"
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                android:text="Beafsteak, Plantain+Viande"
                android:textSize="@dimen/slide_title_middle"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

    </FrameLayout>

</android.support.v7.widget.CardView>