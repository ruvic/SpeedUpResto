<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="0dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@color/white">

            <ImageView
                android:id="@+id/voir_plus_image_menu"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/a"
                android:foreground="#20000000"/>

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginBottom="30dp"
                android:background="#50000000"
                android:layout_gravity="bottom">

                <TextView
                    android:id="@+id/prof_resto"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textSize="18sp"
                    android:text="Restaurant Tchop Tchop"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_below="@id/prof_resto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:id="@+id/prof_local"
                    android:gravity="center"
                    android:text="Essos, Yaoundé" />

                <TextView
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:text="Essos, Yaoundé" />


            </RelativeLayout>

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="bottom|end"
                android:clickable="true"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/click_selector"
                android:src="@drawable/ic_add_a_photo_white_24dp" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:orientation="vertical">

            <EditText
                android:drawableLeft="@drawable/ic_home_white_24dp"
                android:drawableTint="@color/colorPrimaryDark"
                android:id="@+id/edit_nom_restau"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Nom du restaurant"
                android:text="Restaurant Tchop Tchop"
                android:inputType="text"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/slide_title_middle"
                android:textColor="@color/gris_mat"
                android:drawablePadding="@dimen/fab_margin"
                android:layout_marginTop="@dimen/appbar_padding_top"
                android:background="@drawable/rounded_rect_empty"
                android:paddingTop="@dimen/appbar_padding_top"
                android:paddingLeft="@dimen/fab_margin"
                android:paddingBottom="@dimen/appbar_padding_top" />

            <EditText
                android:drawableLeft="@drawable/ic_description_white_24dp"
                android:drawableTint="@color/colorPrimaryDark"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:hint="Description"
                android:text="Ce restaurant contient les meilleur plat de la ville et est luxueux."
                android:lines="5"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/slide_title_middle"
                android:textColor="@color/gris_mat"
                android:drawablePadding="@dimen/fab_margin"
                android:layout_marginTop="@dimen/appbar_padding_top"
                android:background="@drawable/rounded_rect_empty"
                android:paddingTop="@dimen/appbar_padding_top"
                android:paddingLeft="@dimen/fab_margin"
                android:paddingBottom="@dimen/appbar_padding_top" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/appbar_padding_top"
                android:layout_marginLeft="@dimen/desc_padding"
                android:layout_marginRight="@dimen/desc_padding">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gris"
                    android:layout_weight="50" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Contacts"
                    android:textSize="@dimen/text_mini"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/fab_margin"
                    android:layout_marginRight="@dimen/fab_margin"
                    android:layout_weight="35" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gris"
                    android:layout_weight="50" />

            </LinearLayout>

            <EditText
                android:id="@+id/edit_phone"
                android:drawableLeft="@drawable/ic_phone_white_24dp"
                android:drawableTint="@color/colorPrimaryDark"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Nom du restaurant"
                android:inputType="text"
                android:text="695 71 56 81 / 671 03 05 22"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/slide_title_middle"
                android:textColor="@color/gris_mat"
                android:drawablePadding="@dimen/fab_margin"
                android:layout_marginTop="@dimen/appbar_padding_top"
                android:background="@drawable/rounded_rect_empty"
                android:paddingTop="@dimen/appbar_padding_top"
                android:paddingLeft="@dimen/fab_margin"
                android:paddingBottom="@dimen/appbar_padding_top" />

            <EditText
                android:id="@+id/edit_email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:drawableLeft="@drawable/ic_mail_white_profile_24dp"
                android:drawableTint="@color/colorPrimaryDark"
                android:hint="Email"
                android:text="tchoptchop@gmail.com"
                android:inputType="textEmailAddress"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/slide_title_middle"
                android:textColor="@color/gris_mat"
                android:drawablePadding="@dimen/fab_margin"
                android:layout_marginTop="@dimen/appbar_padding_top"
                android:background="@drawable/rounded_rect_empty"
                android:paddingTop="@dimen/appbar_padding_top"
                android:paddingLeft="@dimen/fab_margin"
                android:paddingBottom="@dimen/appbar_padding_top" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/appbar_padding_top"
                android:layout_marginLeft="@dimen/desc_padding"
                android:layout_marginRight="@dimen/desc_padding">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gris"
                    android:layout_weight="50" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Localisation"
                    android:textSize="@dimen/text_mini"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/fab_margin"
                    android:layout_marginRight="@dimen/fab_margin"
                    android:layout_weight="35" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gris"
                    android:layout_weight="50" />

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="@dimen/appbar_padding_top"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="@drawable/rounded_rect_empty">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_location_city_white_24dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginBottom="16dp"
                    android:tint="@color/colorPrimary"
                    />

                <com.jaredrummler.materialspinner.MaterialSpinner
                    android:id="@+id/edit_ville"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:drawableLeft="@drawable/ic_location_city_white_24dp"
                    android:drawableTint="@color/colorPrimaryDark"
                    android:layout_marginLeft="36dp"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="0dp"
                    app:ms_hint="Choisir une catégorie"
                    app:ms_dropdown_max_height="180dp" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="@dimen/appbar_padding_top"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="@drawable/rounded_rect_empty">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_place_white_24dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginBottom="16dp"
                    android:tint="@color/colorPrimary"
                    />

                <com.jaredrummler.materialspinner.MaterialSpinner
                    android:drawableLeft="@drawable/ic_place_white_24dp"
                    android:drawableTint="@color/colorPrimaryDark"
                    android:id="@+id/edit_quartier"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingTop="0dp"
                    android:layout_marginLeft="36dp"
                    android:paddingBottom="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="0dp"
                    app:ms_hint="Choisir une catégorie"
                    app:ms_dropdown_max_height="180dp" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="0dp"
                android:paddingLeft="0dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/cancel_cmd_btn"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="@string/annuler"
                    android:textSize="@dimen/text_mini"
                    android:textColor="@color/red"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/fab_margin"
                    android:layout_marginBottom="@dimen/fab_margin"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/rounded_button_plein_cancel" />

                <Button
                    android:id="@+id/mark_cmd_btn"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="@string/modifier"
                    android:textSize="@dimen/text_mini"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/fab_margin"
                    android:layout_marginBottom="@dimen/fab_margin"
                    android:background="@drawable/rounded_button_plein" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</ScrollView>
