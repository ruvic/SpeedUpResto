<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".LoginActivity">

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="25dp"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/image"
                android:layout_width="wrap_content"
                android:layout_height="138dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/appbar_padding_top"
                android:src="@drawable/speedlogo" />


            <TextView
                android:id="@+id/title"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Connexion"
                android:textColor="@color/bleuFonce"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/fab_margin"
                android:layout_marginRight="@dimen/fab_margin"
                android:layout_marginBottom="@dimen/fab_margin" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/appbar_padding_top"
                android:layout_marginLeft="@dimen/desc_padding"
                android:layout_marginRight="@dimen/desc_padding">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gris"
                    android:layout_weight="50" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text_mini"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/fab_margin"
                    android:layout_marginRight="@dimen/fab_margin"
                    android:layout_weight="60" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gris"
                    android:layout_weight="50" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/desc_padding"
                android:layout_marginRight="@dimen/desc_padding"
                android:layout_marginTop="@dimen/fab_margin">


                <EditText
                    android:id="@+id/login_phone"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="@dimen/appbar_padding_top"
                    android:background="@drawable/rounded_rect_empty"
                    android:drawableLeft="@drawable/ic_phone_white_24dp"
                    android:drawablePadding="@dimen/fab_margin"
                    android:drawableTint="@color/colorPrimary"
                    android:hint="Téléphone"
                    android:inputType="phone"
                    android:paddingBottom="@dimen/appbar_padding_top"
                    android:paddingLeft="@dimen/fab_margin"
                    android:paddingTop="@dimen/appbar_padding_top"
                    android:textColor="@color/gris_mat"
                    android:textSize="@dimen/slide_title_middle" />

                <EditText
                    android:id="@+id/login_password"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="@dimen/fab_margin"
                    android:background="@drawable/rounded_rect_empty"
                    android:drawableLeft="@drawable/ic_lock_open_black_24dp"
                    android:drawablePadding="@dimen/fab_margin"
                    android:drawableTint="@color/colorPrimary"
                    android:hint="Mot de passe"
                    android:inputType="textPassword"
                    android:paddingBottom="@dimen/appbar_padding_top"
                    android:paddingLeft="@dimen/fab_margin"
                    android:paddingTop="@dimen/appbar_padding_top"
                    android:textColor="@color/gris_mat"
                    android:layout_marginBottom="10dp"
                    android:textSize="@dimen/slide_title_middle" />

                <Button

                    android:id="@+id/login_sign_in"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Se connecter"
                    android:textSize="@dimen/text_mini"
                    android:textColor="@color/white"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/fab_margin"
                    android:background="@drawable/rounded_button_plein" />

            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>


</android.support.v4.widget.NestedScrollView>