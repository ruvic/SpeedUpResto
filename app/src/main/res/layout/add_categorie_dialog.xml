<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="0dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Entrer le nom de la catégorie"
        android:textSize="18sp"
        android:textAlignment="center"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/edit_categorie_dialog"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Nom de la catégorie"
        android:inputType="text"
        android:textCursorDrawable="@null"
        android:textSize="@dimen/slide_title_middle"
        android:textColor="@color/gris_mat"
        android:drawablePadding="@dimen/fab_margin"
        android:layout_marginTop="@dimen/appbar_padding_top"
        android:background="@drawable/rounded_rect_empty"
        android:paddingTop="@dimen/appbar_padding_top"
        android:paddingLeft="@dimen/fab_margin"
        android:layout_marginRight="10dp"
        android:paddingBottom="@dimen/appbar_padding_top" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="0dp"
        android:paddingLeft="0dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancel_cat_dialog"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:text="@string/annuler"
            android:textSize="@dimen/text_mini"
            android:textColor="@color/red"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/fab_margin"
            android:layout_marginBottom="@dimen/fab_margin"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="35dp"
            android:background="@drawable/rounded_button_plein_cancel" />

        <Button
            android:id="@+id/add_cat_dialog"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:text="@string/ajouter"
            android:textSize="@dimen/text_mini"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/fab_margin"
            android:layout_marginBottom="@dimen/fab_margin"
            android:background="@drawable/rounded_button_plein" />
    </LinearLayout>

</LinearLayout>