<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="2dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/comment_item_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Paul Xavier"
        android:textSize="14sp"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="5dp"
        android:textStyle="bold"
        android:textColor="@color/noir"
        />

    <TextView
        android:id="@+id/comment_item_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/mini_text"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="25dp"
        android:gravity="center_horizontal"
        android:textStyle="italic"
        android:textSize="11sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:paddingLeft="0dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/comment_item_note"
            android:layout_width="wrap_content"
            android:layout_gravity="left"
            android:layout_height="wrap_content"
            android:text="7.5/10"
            android:gravity="left"
            android:textStyle="italic"
            android:textSize="11sp"/>

        <TextView
            android:id="@+id/comment_item_date"
            android:layout_width="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:text="Monday, 12, 2018"
            android:layout_marginRight="2dp"
            android:gravity="end"
            android:textStyle="italic"
            android:textSize="11sp"/>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@color/gris"/>

</LinearLayout>